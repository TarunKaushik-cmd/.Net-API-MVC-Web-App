@model EmployeeWebApp.Models.SignUpModel

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ENROLLMENT</title>
    <script type="text/javascript" src="/Content/assets/js/jquery.min.js"></script>
    <link href="/Content/assets/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css" />
    <script type="text/javascript" src="/Content/assets/js/bootstrap.min.js"></script>
    <link href="/Content/StyleSheet.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <!------ Include the above in your HEAD tag ---------->
        <div class="container register">
            <div class="row">
                <div class="col-md-3 register-left">
                    <img src="/Content/assets/img/logomain.png" alt="" />
                    <h3>Welcome</h3>
                </div>
                <div class="col-md-9 register-right">
                    <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
                        <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="../SignUp/Index" role="tab" aria-controls="home" aria-selected="true">Register</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="../Login/Index" onclick="location.replace('../Login/Index'),'_top'" role="tab" aria-controls="profile" aria-selected="false">Login</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <h3 class="register-heading">Apply as a Employee</h3>
                        <form method="post" asp-controller="SignUp" asp-action="IndexAsync" asp-antiforgery="true">
                            <div class="row register-form">
                                    <div class="form-group" id="fname">
                                        @Html.TextBoxFor(e => e.FirstName, new { @class = "form-control", placeholder = "First Name *" })
                                        @Html.ValidationMessageFor(e => e.FirstName)
                                    </div>
                                    <div class="form-group" id="lname">
                                        @Html.TextBoxFor(e => e.LastName, new { @class = "form-control", placeholder = "Last Name *" })
                                        @Html.ValidationMessageFor(e => e.LastName)
                                    </div>
                                    <div class="form-group" id="pass">
                                        @Html.TextBoxFor(e => e.Email, new { @class = "form-control", placeholder = "Your Email *" })
                                        @Html.ValidationMessageFor(e => e.Email)
                                    </div>
                                    <div class="form-group" id="cpass">
                                        @Html.PasswordFor(e => e.Password, new { id = "password", @class = "form-control", placeholder = "Password *" })
                                        <span id="result"></span>
                                        @Html.ValidationMessageFor(e => e.Password)
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(e => e.Confirmpwd, new { @class = "form-control", placeholder = "Confirm Password *" })
                                        @Html.ValidationMessageFor(e => e.Confirmpwd)
                                    </div>
                                    <input type="submit" class="btnRegister" value="Register"/>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <script type="text/javascript">
        $(function () {
            var msg = @ViewData["result"];
            if (msg == '1') {
                alert("User Details Inserted Successfully");
                window.location.href = "@Url.Action("Index", "Login")";
            }
            else if (msg == '2') {
                alert("Email / Password does not match")
                window.location.href = "@Url.Action("Index", "Login")";
            }
            else if (msg == '3') {
                alert("Login First !!!")
                window.location.href = "@Url.Action("Index","Login")";
            }
            else if (msg == '4') {
                alert("Registration Successfull")
                window.location.href = "@Url.Action("Index","Login")";
            else if (msg == '401') {
                alert("Registration Successfull")
                window.location.href = "@Url.Action("Index","Login")";
            });
    </script>
</body>
</html>